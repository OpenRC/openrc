description="set up tmpfiles.d entries"

depend()
{
	need localmount
}

start()
{
	ebegin "setting up tmpfiles.d entries"
	@LIBEXECDIR@/sh/tmpfiles.sh --create --remove ${tmpfiles_opts}
	eend $?
	return 0
}
