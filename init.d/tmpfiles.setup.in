description="Set up tmpfiles.d entries"

depend()
{
	need localmount
}

start()
{
	ebegin "Setting up tmpfiles.d entries"
	@LIBEXECDIR@/sh/tmpfiles.sh --exclude-prefix=/dev --create --remove --boot \
		${tmpfiles_opts}
	eend $?
	return 0
}
