description="Halt or Poweroff"

depend()
{
	after killprocs savecache mount-ro
}

start()
{
	if [ "$INIT_HALT" = HALT ]; then
		ebegin "Halting system"
		halt -dhn
		eend $?
	elif [ "$INIT_HALT" = POWEROFF ]; then
		ebegin "Powering off system"
		poweroff -dhn
		eend $?
	fi
}
