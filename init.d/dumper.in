command=/usr/sbin/dumper
command_args="${dumper_args} -d $dump_dir"
description="Core file creation service"
name=dumper

depend()
{
    need root
}    

start() {
    checkpath -d $dump_dir -q
    ebegin "Starting $name"
    $command $command_args
    eend
}
