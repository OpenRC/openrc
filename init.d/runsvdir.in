supervisor=supervise-daemon
command=/usr/bin/runsvdir
pidfile="/run/${RC_SVCNAME}.pid"
command_args="-P $RC_SVCDIR/sv 'log: ...........................................................................................................................................................................................................................................................................................................................................................................................................'"

start_pre()
{
	checkpath -m 0755 -o root:root -d ${RC_SVCDIR}/sv
}
