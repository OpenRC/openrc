description="Set the dmesg level for a cleaner boot"

depend()
{
	before dev modules
	keyword -lxc -prefix -systemd-nspawn -vserver
}

start()
{
	if [ -n "$dmesg_level" ]; then
		dmesg -n$dmesg_level
	fi
}
