description="Register misc binary format handlers"

depend()
{
	after clock procfs
	use modules devfs
	keyword -docker -lxc -openvz -prefix -systemd-nspawn -vserver -zone
}

start()
{
	ebegin "Loading custom binary format handlers"
	"$RC_LIBEXECDIR"/sh/binfmt.sh
	eend $?
	return 0
}
