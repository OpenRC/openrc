depend()
{
	before bootmisc logger
	keyword -prefix -systemd-nspawn -vserver
}

start()
{
	local quiet
	yesno $rc_verbose || quiet=-q

	ebegin "Configuring kernel parameters"
	sysctl ${quiet} --system
	eend $? "Unable to configure some kernel parameters"
}
