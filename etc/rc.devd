# Inform RC that we are in the background and hotplugged
IN_BACKGROUND=yes
IN_HOTPLUG=yes
export IN_BACKGROUND IN_HOTPLUG

getmedia() {
	ifconfig "$1" | while read -r line; do
		case "${line}" in
			media:" "*) echo "${line}"; return;;
		esac
	done
}

# Try and create an init script for network interfaces
if [ ! -e /etc/init.d/"$1" ] && [ ! -e /usr/local/init.d/"$1" ]; then
	base=${1%%.*}
	if [ "${base}" = "net" ]; then
		# We only create links for pyhsical interfaces
		[ -n "$(getmedia "${1#*.}")" ] || exit 1
		base="net.lo0"
	fi
	if [ -e /etc/init.d/"${base}" ] && [ "${base}" != "$1" ]; then
		ln -s "${base}" /etc/init.d/"$1"
	fi
fi

# Run the init script
exec /etc/init.d/"$1" "$2"
